<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_enabled="false">
        <inset android:drawable="@drawable/arrow_right_disabled"></inset>
    </item>

    <item android:state_pressed="true" android:state_enabled="false">
        <inset android:drawable="@drawable/arrow_right_disabled"></inset>
    </item>

    <item android:state_pressed="true" android:state_enabled="true">
        <inset android:drawable="@drawable/arrow_right_pressed"></inset>
    </item>

    <item android:state_pressed="false" android:state_enabled="true">
        <inset android:drawable="@drawable/arrow_right_released"></inset>
    </item>

</selector>